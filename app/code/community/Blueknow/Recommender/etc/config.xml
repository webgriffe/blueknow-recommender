<config>
	<modules>
		<Blueknow_Recommender>
			<version>1.2.0</version>
		</Blueknow_Recommender>
	</modules>
	<global>
		<models>
            <blueknow_recommender>
            	<class>Blueknow_Recommender_Model</class>
            </blueknow_recommender>
        </models>
		<blocks>
			<blueknow_recommender>
				<class>Blueknow_Recommender_Block</class>
			</blueknow_recommender>
		</blocks>
		<helpers>
			<blueknow_recommender>
				<class>Blueknow_Recommender_Helper</class>
			</blueknow_recommender>
		</helpers>
	</global>
	<default>
		<blueknow>
			<item_to_item>
				<enabled>1</enabled>
				<nor>4</nor>
			</item_to_item>
			<item_to_basket>
				<enabled>1</enabled>
				<nor>6</nor>
			</item_to_basket>
			<item_to_user>
				<enabled>1</enabled>
				<nor>6</nor>
			</item_to_user>
		</blueknow>
	</default>
	<frontend>
		<translate>
            <modules>
                <blueknow_recommender>
                    <files>
                        <default>Blueknow_Recommender.csv</default>
                    </files>
                </blueknow_recommender>
            </modules>
        </translate>
		<layout>
			<updates>
				<blueknow_recommender>
					<file>blueknow_recommender.xml</file>
				</blueknow_recommender>		
			</updates>
		</layout>
		<events>
			<customer_login>
				<observers>
					<blueknow_recommender_customer_login>
						<type>model</type>
						<class>Blueknow_Recommender_Model_Observer</class>
						<method>setNewLoginWhenCustomerLogIn</method>
					</blueknow_recommender_customer_login>
				</observers>
			</customer_login>
			<customer_login_tracked>
				<observers>
					<blueknow_recommender_customer_login_tracker>
						<type>singleton</type>
						<class>Blueknow_Recommender_Model_Observer</class>
						<method>unsetNewLoginAfterTracking</method>
					</blueknow_recommender_customer_login_tracker>
				</observers>
			</customer_login_tracked>
			<sales_order_save_after>
				<observers>
					<blueknow_recommender_discontinued>
						<type>singleton</type>
						<class>Blueknow_Recommender_Model_Observer</class>
						<method>discontinueProduct</method>
					</blueknow_recommender_discontinued>
				</observers>
			</sales_order_save_after>
		</events>
	</frontend>
	<adminhtml>
		<events>
			<!--
			<catalog_product_status_update>
				<observers>
					<blueknow_recommender_disable_discontinue>
						<type>singleton</type>
						<class>Blueknow_Recommender_Model_Observer</class>
						<method>discontinueDisabledProduct</method>
					</blueknow_recommender_disable_discontinue>
				</observers>
			</catalog_product_status_update>
			-->
			<catalog_product_delete_before>
				<observers>
					<blueknow_recommender_delete_discontinue>
						<type>singleton</type>
						<class>Blueknow_Recommender_Model_Observer</class>
						<method>discontinueDeletedProduct</method>
					</blueknow_recommender_delete_discontinue>
				</observers>
			</catalog_product_delete_before>
		</events>
		<acl>
	        <resources>
	            <admin>
	                <children>
	                    <system>
	                        <children>
	                            <config>
	                                <children>
	                                    <blueknow module="blueknow_recommender">
	                                        <title>Blueknow Recommender</title>
	                                    </blueknow>
	                                </children>
	                            </config>
	                        </children>
	                    </system>
	                </children>
	            </admin>
	        </resources>
	    </acl>
	    <translate>
            <modules>
                <blueknow_recommender>
                    <files>
                        <default>Blueknow_Recommender.csv</default>
                    </files>
                </blueknow_recommender>
            </modules>
        </translate>
        <layout>
			<updates>
				<blueknow_recommender>
					<file>blueknow_recommender.xml</file>
				</blueknow_recommender>
			</updates>
		</layout>
	</adminhtml>
</config>